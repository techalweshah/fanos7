
CREATE TABLE Users (
    UserID INTEGER PRIMARY KEY AUTOINCREMENT,
    PhoneNumber TEXT NOT NULL UNIQUE,
    CreatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
); 


CREATE TABLE Messages (
    MessageID INTEGER PRIMARY KEY AUTOINCREMENT,
    ConversationID INTEGER NOT NULL,
    MessageText TEXT NOT NULL,
    IsFromAI BOOLEAN DEFAULT FALSE,
    SentAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);






CREATE TABLE SMSMessages (
    MessageID INTEGER PRIMARY KEY AUTOINCREMENT,
    UserID INTEGER NOT NULL,
    MessageText TEXT NOT NULL,
    IsIncoming BOOLEAN NOT NULL,
    CreatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (UserID) REFERENCES Users(UserID)
); 

CREATE TABLE AIReplies (
    ReplyID INTEGER PRIMARY KEY AUTOINCREMENT,
    MessageID INTEGER NOT NULL,
    ReplyText TEXT NOT NULL,
    CreatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (MessageID) REFERENCES SMSMessages(MessageID)
); 

CREATE TABLE Conversations (
    ConversationID INTEGER PRIMARY KEY AUTOINCREMENT,
    UserID INTEGER NOT NULL,
    Context TEXT,
    CreatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    UpdatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (UserID) REFERENCES Users(UserID)
); 

CREATE TABLE SMSTemplates (
    TemplateID INTEGER PRIMARY KEY AUTOINCREMENT,
    TemplateName TEXT NOT NULL,
    TemplateText TEXT NOT NULL,
    CreatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
); 

-- Indexes for faster queries
CREATE INDEX idx_user ON SMSMessages(UserID);
CREATE INDEX idx_message ON AIReplies(MessageID);
CREATE INDEX idx_conversation ON Conversations(UserID);
